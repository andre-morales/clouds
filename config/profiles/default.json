{
	"fs": {
		"/sys/": {
			"path": "/",
			"access": "@all"
		},
		"/usr/": {
			"path": "./usr/$user/",
			"acess": "@all"
		},
		"/trash/": {
			"path": "./usr/$user/trash/",
			"acess": "@all"
		}
	},
	
	"logFSOperations": true,

	"extensions": {
		"rshell": {
			"enabled": true,
			"exec": "cmd.exe"
		},
		"ffmpeg": {
			"enabled": true,
			"ffmpeg_exec": "ffmpeg",
			"ffprobe_exec": "ffprobe"
		}
	}
}
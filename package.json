{
  "name": "clouds",
  "version": "1.0.0",
  "description": "Clouds",
  "private": true,
  "main": "api/dist/main.mjs",
  "type": "module",
  "scripts": {
    "build-api-dist": "tsc -b api",
    "watch-api-dist": "tsc -b api -w",
    "build-client-dev": "webpack --config client/webpack.config.cjs --env development",
    "build-client-prod": "webpack --config client/webpack.config.cjs --env production",
    "build-client-types": "tsc -b client",
    "build-apps-dev": "webpack --config apps/webpack.config.cjs --env development",
    "build-apps-prod": "webpack --config apps/webpack.config.cjs --env production",
    "check-apps-types": "tsc -b apps",
    "view-apps-stats": "webpack --config apps/webpack.config.cjs --env production --json > apps/.stats.json && npx webpack-bundle-analyzer apps/.stats.json",
    "view-client-stats": "webpack --config client/webpack.config.cjs --env production --json > client/.stats.json && npx webpack-bundle-analyzer client/.stats.json"
  },
  "author": "Andr√© Morales",
  "license": "ISC",
  "dependencies": {
    "chalk": "^5.3.0",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "css-loader": "^7.1.2",
    "css-minimizer-webpack-plugin": "^7.0.0",
    "ejs": "^3.1.9",
    "esbuild": "^0.25.0",
    "esbuild-plugin-babel": "^0.2.3",
    "esbuild-sass-plugin": "^3.3.1",
    "express": "^5.0.1",
    "express-fileupload": "^1.4.0",
    "express-ws": "^5.0.2",
    "mini-css-extract-plugin": "^2.9.2",
    "morgan": "^1.10.0",
    "sass": "^1.83.4",
    "sass-loader": "^16.0.4",
    "source-map": "^0.7.4"
  },
  "devDependencies": {
    "@babel/core": "^7.24.3",
    "@babel/plugin-proposal-decorators": "^7.25.9",
    "@babel/preset-env": "^7.24.3",
    "@babel/preset-typescript": "^7.24.6",
    "@types/compression": "^1.7.5",
    "@types/cookie-parser": "^1.4.7",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/express-fileupload": "^1.5.0",
    "@types/hammerjs": "^2.0.45",
    "@types/morgan": "^1.9.9",
    "@types/prismjs": "^1.26.4",
    "@types/ws": "^8.5.13",
    "@types/zepto": "^1.0.36",
    "babel-loader": "^10.0.0",
    "babel-plugin-module-resolver": "^5.0.2",
    "core-js": "^3.36.1",
    "typescript": "^5.6.2",
    "webpack": "^5.91.0",
    "webpack-bundle-analyzer": "^4.10.1",
    "webpack-cli": "^6.0.1"
  },
  "imports": {
    "#common/*.mjs": "./common/dist/*.mjs"
  }
}
